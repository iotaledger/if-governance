  },
  "homepage": "https://github.com/iotaledger/if-governance#readme",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "hardhat": "^2.15.0",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "dotenv": "^16.1.4"
  }
